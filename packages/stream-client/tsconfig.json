{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "lib": ["dom"]
  },
  "include": ["src", "index.ts", "__tests__"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
